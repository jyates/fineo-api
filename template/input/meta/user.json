{
  // READ User information
  "get": {
    "tags": [
      "{{ parent }}"
    ],
    {{consume_json}},
    {{produce_json}},
    "parameters": [
      {
      "name": "username",
      "in": "path",
      "required": true,
      "type": "string"
      }
    ],
    "responses": {
      {{Success_200}},
      {{std_error_responses}}
    },
    {{allow_origin_header}},
    // get looks up the users's api key, so we can't supply an API key for this
    // however, we can still enforce that the request is signed with credentials
    {{security_key_iam-no-api-key}},
    "x-amazon-apigateway-integration": {
      {{meta_credentials}},
      "requestTemplates": {
        "application/json": "{\n    \"apiKey\" : \"$context.identity.apiKey\",\n    \"userName\" : \"$input.params('username')\",\n    \"read\" :{}\n    }"
      },
      {{user_crud_innvocation}},
      "passthroughBehavior": "never",
      "responses": {
        {{default_200_response}},
        {{std_error_mappings}}
      },
      "httpMethod": "POST",
      "contentHandling": "CONVERT_TO_TEXT",
      "type": "aws"
    }
  },
  // CREATE User
  "put": {
    "tags": [
      "{{ parent }}"
    ],
    {{consume_json}},
    {{produce_json}},
    "parameters": [
      {{user_request_parameter}}
    ],
    "responses": {
      {{Success_200}},
      {{std_error_responses}}
    },
    {{allow_origin_header}},
    {{security_key_iam}},
    "x-amazon-apigateway-integration": {
      {{meta_credentials}},
      "requestTemplates": {
        "application/json": "{\n \"apiKey\" : \"$context.identity.apiKey\",\n \"create\": $input.json('$')\n}"
    },
    {{tenant_crud_innvocation}},
    {{never_passthrough}},
    "responses": {
      {{default_200_response}},
      {{std_error_mappings}}
    },
    {{post_text_aws_integration}}
    }
  },
// UPDATE User... does nothing right now
  "patch": {
    "tags": [
      "{{ parent }}"
    ],
    {{consume_json}},
    {{produce_json}},
    "parameters": [
      {{user_request_parameter}}
    ],
    "responses": {
      {{Success_200}},
      {{std_error_responses}}
    },
    {{allow_origin_header}},
    {{security_key_iam}},
    "x-amazon-apigateway-integration": {
      {{meta_credentials}},
      "requestTemplates": {
        "application/json": "{\n    \"apiKey\" : \"$context.identity.apiKey\",\n\"update\": $input.json('$')\n}"
      },
      {{tenant_crud_innvocation}},
      {{never_passthrough}},
      "responses": {
        {{default_200_response}},
        {{std_error_mappings}}
      },
      {{post_text_aws_integration}}
    }
  },
// Delete User
  "delete": {
    "tags": [
      "{{ parent }}"
    ],
    {{consume_json}},
    {{produce_json}},
    "parameters": [
      {{user_request_parameter}}
    ],
    "responses": {
      {{Success_200}},
      {{std_error_responses}}
    },
    {{security_key_iam}},
    "x-amazon-apigateway-integration": {
      {{meta_credentials}},
      "requestTemplates": {
        "application/json": "{\n \"apiKey\" : \"$context.identity.apiKey\",\n \"delete\": $input.json('$')\n}"
    },
    {{tenant_crud_innvocation}},
    {{never_passthrough}},
    "responses": {
      {{default_200_response}},
      {{std_error_mappings}}
    },
    {{post_text_aws_integration}}
    }
  },
// Allow web app to access all user information
  {{cors_put-get-patch-delete}}
}
